# Managed by Ansible - SearXNG Configuration
# 完整文档: https://docs.searxng.org/admin/settings/index.html

general:
  instance_name: "{{ searxng_instance_name }}"
{% if searxng_contact_url %}
  contact_url: "{{ searxng_contact_url }}"
{% endif %}
  enable_metrics: {{ searxng_enable_metrics | lower }}

server:
  secret_key: "{{ searxng_secret_key }}"
  base_url: "{{ searxng_base_url }}"
  bind_address: "0.0.0.0"
  port: {{ searxng_container_port }}

search:
  autocomplete: "{{ searxng_autocomplete }}"
  default_lang: "auto"

ui:
  default_theme: simple
  theme_args:
    simple_style: auto

# 启用常用搜索引擎
engines:
  - name: google
    disabled: false
  - name: bing
    disabled: false
  - name: duckduckgo
    disabled: false
  - name: wikipedia
    disabled: false
  - name: github
    disabled: false
